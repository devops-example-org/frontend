{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Default",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/packages",
      "userDataDir": "${workspaceFolder}/.chrome",
      "sourceMapPathOverrides": {
        "webpack:///./~/*": "../${webRoot}/node_modules/*",  
        "webpack:///./*":   "${webRoot}/src/*",        
        "webpack:///../*": "${webRoot}/src/*",         
        "webpack:///*":     "*",                           
        "webpack://${workspaceFolderBasename}/*": "${webRoot}/*",
        "webpack://*": "${workspaceFolder}/*"
      }
    }
  ]
}
