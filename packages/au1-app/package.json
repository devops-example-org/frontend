{
  "name": "@devops-example/au1-app",
  "description": "An Aurelia client application.",
  "version": "0.1.0",
  "repository": {
    "type": "???",
    "url": "???"
  },
  "license": "MIT",
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "build": "webpack",
    "build:prod": "webpack --env production",
    "start": "webpack  serve --progress",
    "analyze": "webpack --env production --analyze",
    "test": "jest",
    "e2e": "playwright test",
    "docker:build": "docker build -t au1-app:0.1.0 -t au1-app:latest .",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "cy": "cypress run",
    "cy:dev": "cypress open --e2e --browser chrome"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "overrides": {
    "chokidar": "^3.5.3",
    "glob-stream": "^7.0.0",
    "glob-parent": "^6.0.2",
    "micromatch": "^4.0.5"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "^aurelia-binding$": "<rootDir>/../../node_modules/aurelia-binding"
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/../../node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "^.+\\.ts$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/test/jest-pretest.ts"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!**/*.spec.{js,ts}",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/../../test/coverage-jest",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@devops-example/au1-component": "^0.1.0",
    "@devops-example/fast-components": "^0.1.0"
  }
}
