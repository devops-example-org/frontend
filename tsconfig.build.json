{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es6",
    "lib": [
      "es2017",
      "dom"
    ],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "newLine": "lf",
    "downlevelIteration": true,
    "inlineSources": true,
    "strictNullChecks": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    ".vscode",
    "dist",
    "doc",
    "node_modules",
    "test"
  ]
}