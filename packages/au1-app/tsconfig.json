{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "composite": true,
    "module": "esnext",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowJs": true,
    "paths": {
      "@devops-example/*": ["../*/src"]
    }
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "test/coverage-jest",
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
