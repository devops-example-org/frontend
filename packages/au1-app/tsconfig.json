{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES2015",
    "baseUrl": ".",
    "paths": {
      "@devops-example/*": ["../*/src"]
    },
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "newLine": "lf",
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "test/coverage-jest"
  ]
}

